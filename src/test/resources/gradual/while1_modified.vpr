field f: Int

method test01(x: Ref) returns (b: Bool)
  requires acc(x.f)
  ensures ? && x.f == old(x.f)
{
  while (b)
    invariant acc(x.f, 1)
  {
    b := !b
  }
}


method test02(x: Ref) returns (b: Bool)
  requires ? && true
  ensures ? && true
{
  while (b)
    invariant acc(x.f, 1)
  {
    b := !b
  }
}
