// tests cases using ? and a ? b : c

field f: Int

method test00(x: Ref) returns (b: Bool)
  requires acc(x.f)
{
  while (b)
    // ? should be nothing
    invariant ? && true
    invariant (b ? acc(x.f, 1) : true)
  {
    b := !b
  }

}
